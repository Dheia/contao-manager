doctype html
html(lang="en", ng-app="tenside")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= "Tenside UI"

    each stylesheet in stylesheets
      link(rel="stylesheet", href=stylesheet)

    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->

  body
    .container
        nav.navbar.navbar-default(role="navigation")
          .container-fluid
            .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
                span.src-only= "Toggle navigation"
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="#") Tenside

            #navbar.collapse.navbar-collapse
              ul.nav.navbar-nav
                li.active
                  a(href="#") Link A
                li
                  a(href="#") Link B

              tenside-search

        block content

        footer.well.well-sm
          a.btn.btn-default
            | Tenside

          label.btn.btn-default
            input(type="checkbox", onclick="document.body.className = document.body.className ? '' : 'experts-mode'")
            Toggle experts mode

    each javascript in javascripts
      script(src=javascript)
