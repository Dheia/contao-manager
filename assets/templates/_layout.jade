doctype html
html(lang="en", ng-app="tenside")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= "Tenside UI"

    each stylesheet in stylesheets
      link(rel="stylesheet", href=stylesheet)

    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->

  body(ng-controller="tensideMainController")
    .container
        nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
          .container
            .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
                span.sr-only= "Toggle navigation"
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="#") Tenside

            #navbar.collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href="#/about") About
                li
                  a(href="#/support") Support

              tenside-search

        block content

        footer
          | Tenside #{app.tensideVersion}, provides Composer #{app.composerVersion}

          .pull-right
            label.checkbox
              input(type="checkbox", onclick="document.body.className = document.body.className ? '' : 'experts-mode'")
              Toggle experts mode

    each javascript in javascripts
      script(src=javascript)
