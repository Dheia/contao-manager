doctype html
html(lang="en", ng-app="tenside")
  head
    //- Pretty cool method to prevent useless favicon requests.
    link(rel="icon", type="image/png", href="data:image/png;base64,iVBORw0KGgo=")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title(ng-bind="title")= "Tenside dependency manager - Loading..."

    each stylesheet in stylesheets
      link(rel="stylesheet", href=stylesheet)

    //- removed for the moment, not used.
    //- <!--[if lt IE 9]>
    //- script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    //- script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    //- <![endif]-->
  body
    #blur.blur-out
      #blur-cover
      #app-content(ui-view, class="{{appContentClass}}")
    tenside-console#task-polling

    script.
      var TENSIDEApi=#{app.tensideApi};

    each javascript in javascripts
      script(src=javascript)
